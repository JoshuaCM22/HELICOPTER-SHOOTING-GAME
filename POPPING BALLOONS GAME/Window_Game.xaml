<Window x:Class="POPPING_BALLOONS_GAME.Window_Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POPPING_BALLOONS_GAME"
        mc:Ignorable="d"
        Closed="OnClosing"
         Title="POPPING BALLOONS GAME" Height="600" Width="450" ResizeMode="CanMinimize">
    <Canvas Name="MyCanvas" Focusable="True" MouseLeftButtonDown="PopBalloons" Background="#1C2833">
        <Label FontSize="24" Name="lblScore" Content="Your Score: 0" Foreground="White" FontWeight="Normal" Canvas.Top="519" Canvas.Left="10" />
        <Label FontSize="24" Name="lblMissed" Content="Missed: 0" Foreground="White" FontWeight="Normal" Canvas.Top="519" Canvas.Left="282" Width="152" />
    </Canvas>
</Window>